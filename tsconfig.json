{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules",
    "docs/vendor"
  ]
}
